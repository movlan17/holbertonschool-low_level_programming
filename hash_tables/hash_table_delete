#include <stdlib.h>
#include "hash_tables.h"

/**
 * hash_table_delete - Hash cədvəlini silir və yaddaşı azad edir.
 * @ht: Silinəcək hash cədvəlinin göstəricisi.
 *
 * Funksiya hash cədvəldəki bütün düyünləri, onların açar və dəyərlərini
 * azad edir, sonra isə cədvəl üçün ayrılmış yaddaşı sərbəst buraxır.
 */
void hash_table_delete(hash_table_t *ht)
{
    unsigned long int i;
    hash_node_t *node, *tmp;

    if (ht == NULL)
        return;

    for (i = 0; i < ht->size; i++)
    {
        node = ht->array[i];
        while (node != NULL)
        {
            tmp = node->next;
            free(node->key);
            free(node->value);
            free(node);
            node = tmp;
        }
    }
    free(ht->array);
    free(ht);
}

